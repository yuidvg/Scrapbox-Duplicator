  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "debug on deno",
      "type": "node",
      "program": "${workspaceFolder}/mod.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/usr/local/bin/deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    }
  ]
}
